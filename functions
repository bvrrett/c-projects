#include <stdio.h>
#include <stdlib.h>
int computeMaxSequenceLength(int first, last);
int computeSequenceLength(int x);
int computeNextValue(int value);
int main(void) {
	setvbuf(stdout, NULL, _IONBF, 0);
	FILE *fp;
	int first;
	int last;
	char buffer[BUFSIZ];
	printf("Enter a file for output: \n");
	fgets(buffer, 1000, stdin);
	fp = fopen(buffer, "w");

	fgets(buffer, BUFSIZ, stdin);
	first = atoi(buffer);
	fgets(buffer, BUFSIZ, stdin);
	last = atoi(buffer);
	printf("%d", computeMaxSequenceLength(first, last));
	return EXIT_SUCCESS;
}

int computeMaxSequenceLength(int first, int last) {
	int i, j, maxLength = 1;
	for (i = first; i <= first; i++) {
		j = computeSequenceLength(first);
		maxLength++;
	}

	return maxLength;
}
int computeSequenceLength(int x) {
	int j;
	int length;
	for (j = x; j < x; j++) {
		length = computeNextValue(x);
	}

	return length;
}
int computeNextValue(int value) {
	if (value % 2 == 1)
		return 3 * value + 1;
	else
		return value / 2;
}
